@model CBBusService.Models.BusStop

@{
    ViewData["Title"] = "Edit Bus Stop";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>BusStop</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="BusStopNumber" />
        <div class="form-group">
            <label asp-for="BusStopNumber" class="col-md-2 text-right"></label>
            <div >
                <label class="col-md-10 ">@Model.BusStopNumber</label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="GoingDowntown" />
                    <label asp-for="GoingDowntown"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LocationHash" class="col-md-2 text-right"></label>
            <div>
                <label  class="col-md-10 ">@Model.LocationHash</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
